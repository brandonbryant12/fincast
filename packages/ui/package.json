{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
     },
     "./lib/utils": {
        "types": "./dist/lib/utils.d.ts",
        "import": "./dist/lib/utils.js"
     },
    "./styles/global.css": "./src/styles/global.css"
